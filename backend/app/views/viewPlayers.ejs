<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
</html>
<h5>
    PLAYERS DATABASE
</h5>
<br>
<td>
    Want to insert a player? Click here
    <input type="button" value="Insert a Player" onclick="window.location.href='/api/v1/players/add'">
</td>
<br>
<br>
<td>
    Reset the database? Click here
    <input type="button" value="Reset the Database" onclick="window.location.href='/api/v1/players/resetPlayers'">
</td>
<br>
<br>
<td>
    Change users permissions? Click here
    <input type="button" value="Change Permissions" onclick="window.location.href='/api/v1/players/changeUsers'">
</td>
<br>
<br>
<td>
    Search players by name
    <form action="/api/v1/players/search" method="post">
        <input type="text" value="", name="name", id="name", placeholder="Name to search">
        <input type="submit" value="Search">
        <br>
        *To show all players, leave the field empty
    </form>

</td>
<td>
    <input type="button" value="Click to logout" onclick="window.location.href='/api/v1/players/logout'">
</td>
<br>
<br>
<td>
    Current Players in the Database
</td>
<table class="table table-striped">
    <thead class="thead-dark">
    <tr>
        <th>Name</th>
        <th>Birthday</th>
        <th>Nationality</th>
        <th>TeamID</th>
        <th >Position</th>
        <th>Number</th>
        <th>LeagueID</th>
    </tr>
    </thead>
    <% elements.forEach( element => { %>
        <tr>
            <td> <%= element.name %></td>
            <td> <%= element.birthdate %></td>
            <td> <%= element.nationality %></td>
            <td> <%= element.teamId %></td>
            <td> <%= element.position %></td>
            <td> <%= element.number %></td>
            <td> <%= element.leagueId %></td>
            <td> <a href="/api/v1/players/edit/<%= element.id %>">Edit</a></td>
            <td> <a href="/api/v1/players/remove/<%= element.id %>">Delete</a></td>
            <td> <a href="/api/v1/players/<%= element.id %>">View</a></td>
        </tr>
    <% }) %>
</table>
